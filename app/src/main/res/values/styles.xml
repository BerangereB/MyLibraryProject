<resources>

    <style name="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/my_spinner_text_color</item>
    </style>

    <style name="Switch">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/colorPrimary</item>
        <item name="android:colorForeground">#eeeeee</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="TxtInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Inverse</item>
        <item name="android:textSize">@dimen/txtInputLayoutsize</item>
        <item name="android:textColorHint">@color/textColorGrey</item>
        <item name="android:paddingStart">@dimen/formular_layout_padding</item>
        <item name="android:paddingEnd">@dimen/formular_layout_padding</item>
    </style>

    <style name="TxtInputLayoutLogin" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Inverse</item>
        <item name="android:textSize">@dimen/txtInputLayoutsize</item>
        <item name="android:textColorHint">@color/textColorWhite</item>
    </style>

    <style name="TxtFormular" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorGrey</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ButtonGrey" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_marginTop">@dimen/margin_top_button</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:background">@drawable/button_ripple_2</item>
    </style>

    <style name="ButtonLight" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_marginTop">@dimen/margin_top_button</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:background">@drawable/button_ripple_1</item>
    </style>

    <style name="TVFavBookDescription" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="FavBookDescription" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>


</resources>
